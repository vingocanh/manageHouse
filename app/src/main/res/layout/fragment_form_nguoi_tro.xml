                android:id="@+id/edtHo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textSize="@dimen/sizeForm"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
